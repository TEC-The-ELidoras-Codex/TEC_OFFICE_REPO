# Dockerfile for Hugging Face Space Deployment
# This Dockerfile is optimized for deploying TEC Office Suite to Hugging Face Spaces

FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Copy only the requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Create necessary directories
RUN mkdir -p config data logs

# Copy application files
COPY app.py .
COPY src/ src/
COPY scripts/ scripts/
COPY config/*.json config/
COPY config/*.yaml config/

# Copy example files (not sensitive data)
COPY config/env.example config/

# Create empty .env file if needed
RUN if [ ! -f config/.env ]; then touch config/.env; fi

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV PORT=7860

# Expose the port required by Hugging Face Spaces
EXPOSE 7860

# Command to run the application
CMD ["python", "app.py"]
